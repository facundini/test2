        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%=f.label :email%>
            </div>
            <div class= "col-sm-8">
                <%=f.email_field :email, class:"form-control", placeholder:"Email"%>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%=f.label 'ContraseÃ±a'%>
            </div>
            <div class= "col-sm-8">
