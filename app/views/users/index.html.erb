<h1 align="center">Usuarios</h1>
<div align="center">
<div>
 <%= will_paginate%>
 </div>
    <% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user)%></li>
                <li class="article-title">
                    <%=link_to user.username, user_path(user)%>
                </li>
                <li>
                    <small><%= pluralize(user.articles.count, "article") if user.articles%></small>
                </li>
                <% if logged_in? and current_user.admin?%>
                <li><%=link_to 'Borrar usuario', user_path(user), method: :delete,
                data:{confirm:"Estas seguro de borrar a este usuario y a todos sus articulos? "}%>
                
                <%end%>
            </div>
        </div>
    </ul>
    <% end %>
    <div>
 <%= will_paginate%>
 </div>
</div>